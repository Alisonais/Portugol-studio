programa
{
inclua biblioteca Matematica

	funcao inicio ()
	{real valor ,valor1,parcelado ,taxa
	inteiro op,op1
	caracter op2
faca {		
	escreva("simulador de cartao de credito\n")	
	
	escreva("digite o valor desejado: ")
	leia(valor)
	escreva("\n\n")
	escreva("escolha a forma de pagamento\n")
	escreva("\n")
	escreva("[1] Débito\n")
	escreva("[2] Crédito a vista\n")
	escreva("[3] Crédito parcelado\n")
	leia(op)
	escreva("\n\n")
	
	escolha (op){
	caso 1: valor1 = valor + (valor * (1.79/100))
			escreva("Débito R$ ",valor1 = Matematica.arredondar(valor1,2))
	pare
	
	caso 2: valor1 = valor + (valor * (5.43/100))
			escreva("Crédito a vista R$ ",valor1 = Matematica.arredondar(valor1,2))
	pare
	
	caso 3: escreva("Em quantas parcelas deseja 2 até 10: ")
			leia(op1)
			escreva("\n\n")
			
		escolha (op1){
			caso 2 : valor1 = valor + (valor * (6.5/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 3 : valor1 = valor + (valor * (8.77/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 4 : valor1 = valor + (valor * (9.88/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 5 : valor1 = valor + (valor * (10.99/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 6 : valor1 = valor + (valor * (11.33/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 7 : valor1 = valor + (valor * (11.49/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 8: valor1 = valor + (valor * (12.49/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 9: valor1 = valor + (valor * (13.5/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso 10 : valor1 = valor + (valor * (14.49/100))
				parcelado = valor1/op1
				taxa = valor1 - valor 
				escreva("Crédito parcelado em ",op1," vezes de R$ ",parcelado = Matematica.arredondar(parcelado,2))
				escreva("\nValor total de ",valor1 = Matematica.arredondar(valor1,2),". valor de taxa de ",taxa = Matematica.arredondar(taxa,2))
			pare
			
			caso contrario: escreva("Parcelamento invalido")
		}
	
	
			
	
	pare
	caso contrario: escreva("numero invalido ")
	}	
	
	escreva("\n\nDeseja fazer mais simulações [s]/[n]")	
	leia(op2)
	escreva("\n\n")
		
	} enquanto (op2 != 'n')	
	
	escreva("\n\n\t\tMUITO OBRIGADO\n\n\n")		
	}
}
